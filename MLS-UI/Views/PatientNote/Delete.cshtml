@model MLS_UI.Models.NoteDto

@{
}
@{
    ViewData["Title"] = "Delete";
}

<h2>Supprimer la note</h2>

<h4>Etes-vous sûr de vouloir supprimer la note du patient ?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientNote)
        </dd>
    </dl>
    <div>
        <form asp-action="ReallyDelete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Retour à la liste des notes</a>
        </form>
    </div>
</div>
