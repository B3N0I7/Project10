@model MLS_UI.Models.NoteDto
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

}
@{
    ViewData["Title"] = "Update";
}

<h2>Mettre à jour la fiche du patient</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
                <input asp-for="Patient" class="form-control" />
                <span asp-validation-for="Patient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientNote" class="control-label"></label>
                <input asp-for="PatientNote" class="form-control" />
                <span asp-validation-for="PatientNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Retour à la liste des notes</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}